<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/backgound_login">
    <Button
        android:id="@+id/icon_back"
        android:layout_width="wrap_content"
        android:layout_marginLeft="10dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/ic_arrow_back_black_24dp"
        android:layout_height="wrap_content"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đăng ký"
        android:textSize="25sp"
        android:layout_marginTop="30dp"
        android:textColor="@color/colorwhite"
        android:gravity="center"/>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:errorEnabled="false"
        app:errorTextAppearance="@color/colorGreen"
        app:hintTextAppearance="@style/TextLabel"
        android:layout_marginTop="20dp"
       >

        <EditText
            android:id="@+id/ed_tentk"
            android:background="@color/colorwhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tên tài khoản"
            android:theme="@style/MycolorAccent"
            android:alpha="0.5"
            android:padding="15dp"
            android:textSize="16sp"
            android:drawablePadding="8dp"
            android:drawableLeft="@drawable/ic_person_black_24dp"
            android:textColorHint="@color/colorwhite"
            app:hintTextAppearance="@style/TextLabel"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="8dp"/>

    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/ed_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:alpha="0.5"
            android:theme="@style/MycolorAccent"
            android:background="@color/colorwhite"
            android:drawableLeft="@drawable/ic_email_black_24dp"
            android:drawablePadding="8dp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="15dp"
            android:textColorHint="@color/colorwhite"
            app:hintTextAppearance="@style/TextLabel" />

    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_nhapmk"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.example.user.lvhnreadbookapp.ultil.PasswordEditText
            android:id="@+id/ed_nhapmk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:alpha="0.5"
            android:theme="@style/MycolorAccent"
            android:background="@color/colorwhite"
            android:drawableLeft="@drawable/ic_lock_black_24dp"
            android:drawablePadding="8dp"
            android:hint="Mật khẩu"
            android:padding="15dp"
            android:password="true"
            app:useStrike="true"
            app:useValidate="true"
            android:textColorHint="@color/colorwhite"
            app:hintTextAppearance="@style/TextLabel" />

    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.example.user.lvhnreadbookapp.ultil.PasswordEditText
            android:id="@+id/ed_nhaplaimmk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:alpha="0.5"
            app:useStrike="true"
            android:theme="@style/MycolorAccent"
            android:background="@color/colorwhite"
            android:drawableLeft="@drawable/ic_lock_black_24dp"
            android:drawablePadding="8dp"
            android:hint="Nhập lại mật khẩu"
            android:padding="15dp"
            android:password="true"
            android:textColorHint="@color/colorwhite"
            app:hintTextAppearance="@style/TextLabel" />

    </android.support.design.widget.TextInputLayout>
           <Button android:id="@+id/btn_dangky"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="đăng ký"
            android:textColor="@color/colorwhite"
            android:background="@drawable/state_btn"
           android:layout_marginLeft="30dp"
           android:layout_marginRight="30dp"
           android:layout_marginTop="10dp"
           />


    </LinearLayout>


