<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/backgound_login">
    <Button
        android:id="@+id/icon_returnback"
        android:layout_width="wrap_content"
        android:layout_marginLeft="10dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/ic_arrow_back_black_24dp"
        android:layout_height="wrap_content"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Khôi phục mật khẩu"
        android:textSize="24sp"
        android:layout_marginTop="80dp"
        android:textColor="@color/colorwhite"
        android:gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bạn vui lòng nhập dịa chỉ email vào ô bên dưới để tiến hành đổi mật khẩu"
        android:textSize="14sp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorwhite"
        android:gravity="center"/>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:errorEnabled="false"
        app:errorTextAppearance="@color/colorGreen"
        app:hintTextAppearance="@style/TextLabel"
        android:layout_marginTop="20dp"
        >

        <EditText
            android:id="@+id/ed_maildk"
            android:background="@color/colorwhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email đăng ký"
            android:theme="@style/MycolorAccent"
            android:alpha="0.5"
            android:padding="14dp"
            android:textSize="16sp"
            android:drawablePadding="8dp"
            android:drawableLeft="@drawable/ic_email_black_24dp"
            android:textColorHint="@color/colorwhite"
            app:hintTextAppearance="@style/TextLabel"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="8dp"/>

    </android.support.design.widget.TextInputLayout>


    <Button
        android:id="@+id/btn_khoiphucmk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Khôi phục mật khẩu"
        android:background="@drawable/state_btn"
        android:textColor="@color/colorwhite"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="180dp"
        android:layout_marginRight="20dp"
        android:weightSum="3"        >
        <Button
            android:id="@+id/button_dangky"
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tạo tài khoản"
            android:textStyle="bold"
            android:gravity="right"
            android:background="@android:color/transparent"
            android:textColor="@color/colorwhite"/>
        <Button
            android:id="@+id/button_boquadangnhap"
            android:layout_weight="1"
            android:textStyle="bold"
            android:gravity="right"
            android:padding="5dp"
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorwhite"
            android:text="Bỏ qua"/>

    </LinearLayout>


</LinearLayout>

