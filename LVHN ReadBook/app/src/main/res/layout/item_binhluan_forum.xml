<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@color/colorcanhan"
            android:layout_margin="20dp"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="70dp"
                android:id="@+id/img_user"
                android:layout_height="match_parent"
                android:src="@drawable/user"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/txt_tenuser"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_weight=".3"
                        android:text="NguyenHaiHa "
                        android:textColor="@color/colorblack"
                        android:textSize="16sp" />

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/txt_vitri"
                        android:layout_marginTop="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="left"
                        android:text="Số sách đã đọc 23 "
                        android:textSize="15sp"
                        android:textColor="@color/uncheckedbottom" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        <TextView
            android:id="@+id/txt_noidung"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:text="Sách giáo dục về gì ạ, trình độ bao nhiêu, bạn tìm hay cho con bạn v"/>
       <LinearLayout
           android:layout_width="match_parent"
           android:orientation="horizontal"
           android:layout_marginTop="6dp"
           android:layout_marginRight="30dp"
           android:layout_marginLeft="30dp"
           android:layout_marginBottom="10dp"
           android:layout_height="wrap_content">

           <TextView
               android:id="@+id/txt_ngaytao"
               android:layout_width="200dp"
               android:layout_height="wrap_content"
               android:text="23-04-2018 04:04:58"/>



       </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/colorTrangchu"
            android:layout_height="1dp"/>
    </LinearLayout>
