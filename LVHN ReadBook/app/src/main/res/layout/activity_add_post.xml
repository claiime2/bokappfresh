<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ForumPost.AddPostActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <include layout="@layout/toolbar_navigation"/>
        <EditText
            android:id="@+id/tieude"
            android:theme="@style/MycolorAccent"
            android:layout_width="match_parent"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
            android:hint="Tiêu đề"/>
        <EditText
            android:id="@+id/noidung"
            android:theme="@style/MycolorAccent"
            android:layout_width="match_parent"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:hint="Nội dung"/>
        <Button
            android:id="@+id/btnPostbai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gửi"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:background="@drawable/btn_suathongtin"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>